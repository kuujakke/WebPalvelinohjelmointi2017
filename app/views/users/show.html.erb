<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>
<%= "Has made #{pluralize(@user.ratings.count, "rating")}, average #{@user.average_rating}" unless @user.ratings.empty? %>

<h3>Ratings:</h3>
<ul>
  <% @user.ratings.each  do |rating| %>
      <li>
        <%= rating %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: "Really delete rating?" } if @user == current_user %>
      </li>
<% end %>
</ul>

<% if current_user == @user  %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
