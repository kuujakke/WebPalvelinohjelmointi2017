<p id="notice"><%= notice %></p>

<h1>Users</h1>

<ul class="list-group">
  <% @users.each do |user| %>
      <%= link_to user_path(user), class:'list-group-item' do %>
          <span class="list-group-item-heading"><%= user.username %></span>
          <% unless user.is_active? %>
              <span class='label label-info pull-right'><%= "Account frozen" %></span>
          <% end %>
      <% end %>
  <% end %>
</ul>
<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-block' %>
