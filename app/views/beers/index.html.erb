<p id="notice"><%= notice %></p>

<h1>Listing beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', beers_path(order:"name") %> </th>
      <th> <%= link_to 'Style', beers_path(order:"style") %> </th>
      <th> <%= link_to 'Brewery', beers_path(order:"brewery") %> </th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <% binding.pry if beer.brewery.nil? %>
      <tr>
        <td><%= link_to beer.name, beer, class:'btn btn-link' %></td>
        <td><%= link_to beer.style.name, beer.style, class:'btn btn-link' %></td>
        <td><%= link_to beer.brewery.name, beer.brewery, class:'btn btn-link' %></td>
        <td><%= edit_and_destroy_buttons(beer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Beer', new_beer_path, class:'btn btn-primary btn-block' if current_user %>
<%= link_to 'List of breweries', breweries_path, class:'btn btn-default btn-block' %>
