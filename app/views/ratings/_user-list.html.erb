<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Most active users</h2>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Username</th>
        <th>Favorite beer</th>
        <th>Prefered style</th>
        <th>Favorite Brewery</th>
        <th>Ratings</th>
        <th colspan="5"></th>
      </tr>
      </thead>

      <tbody>
      <% @top_raters.each do |user| %>
          <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= link_to user.favorite_beer.name, user.favorite_beer %></td>
            <td><%= link_to user.favorite_style, user.favorite_style %></td>
            <td><%= link_to user.favorite_brewery, user.favorite_brewery %></td>
            <td><%= user.ratings.count %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
