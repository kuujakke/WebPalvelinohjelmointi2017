<p id="notice"><%= notice %></p>

<h1>Listing breweries</h1>
<p>Number of breweries: <%= @breweries.count %> </p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery, class: 'btn btn-link' %></td>
        <td><%= brewery.year %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_brewery_path(brewery), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brewery', new_brewery_path, class: 'btn btn-primary btn-block' %>
<%= link_to 'List of beers', beers_path, class: 'btn btn-default btn-block' %>